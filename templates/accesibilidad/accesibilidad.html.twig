    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- TÍTULO -->
    <title>{% block title %}StreetVibesShop{% endblock %}</title>

    <!-- ENLACES A ARCHIVOS CSS -->
    <link rel="stylesheet" href="{{ asset('landing_page/css/estilos.css') }}"/>
