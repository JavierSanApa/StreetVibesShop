                        <p><i class="bi bi-envelope-fill"></i> info@svs.com</p>
                    </div>
                    <!-- Enlaces rápidos -->
                    <div class="col-md-2">
                        <h5>Enlaces Rápidos</h5>
                        <ul class="list-unstyled">
                            <li><a href="index.html" class="text-white">Inicio</a></li>
                            <li><a href="#" class="text-white">Novedades</a></li>
                            <li><a href="#" class="text-white">Drops</a></li>
                            <li><a href="#" class="text-white">Ropa</a></li>
                            <li><a href="#" class="text-white">Accesorios</a></li>
                        </ul>
                    </div>
                    <!-- Redes sociales -->
                    <div class="col-md-2">
                        <h5>Síguenos</h5>
                        <a href="#" class="text-white"><i class="bi bi-instagram"></i> Instagram</a><br>
                        <a href="#" class="text-white"><i class="bi bi-facebook"></i> Facebook</a><br>
                        <a href="#" class="text-white"><i class="bi bi-twitter"></i> Twitter</a>
                    </div>
                    
                    <!-- Centro de ayuda -->
                    <div class="col-md-3">
                        <h5>Centro de Ayuda</h5>
                        <ul class="list-unstyled">
                            <li><a href="#" class="text-white">FAQ</a></li>
                            <li><a href="#" class="text-white">Política de cookies</a></li>
